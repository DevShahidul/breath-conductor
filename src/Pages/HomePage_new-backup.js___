        });
    }
    
    // handle theme option 
    handleThemePopUpAction = (value) => {
        if(value === "Cancel"){
            this.setState({
                theme: "Sunrise",
                themePopup: false
            })
        }else{
            this.setState({
                themePopup: false
            })
        }
    }
    
    // handle theme option 
    handleNarattionPopUpAction = (value) => {
        if(value === "Cancel"){
            this.setState({
                narattion: "None",
